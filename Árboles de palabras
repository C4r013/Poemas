             ['ERES Luz infinito', 1, 8],
             
 				 ['ERES kryptonita', 1, 8],
             ['ERES Arcoiris', 1, 8],
             
             ['ERES Tu Mejor versión', 1, 8],
 				 ['ERES Tu Mejor compañía', 1, 8],
             ['ERES Tu Mejor equipo', 1, 8],
 				 ['ERES Tu Mejor consejera', 1, 8],
             ['ERES Tu latido', 1, 8],
