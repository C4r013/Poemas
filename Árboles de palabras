             ['ERES Arte', 1, 8],
             ['ERES Vida', 1, 8],
             ['ERES AMOR', 2, 8],
 				 ['ERES MUJER', 2, 8], 	
          ]
        );

        var options = {
            wordtree: {
            format: 'implicit',
            word: 'ERES',
            colors: ['red', 'black', 'green']
          }
        };

        var chart = new google.visualization.WordTree(document.getElementById('wordtree_basic'));
        chart.draw(data, options);
      }
